{
  "publisher": "Dervex",
  "name": "argon",
  "displayName": "Argon",
  "description": "Roblox Studio two-way live sync of code and instances",
  "icon": "images/Logo.png",
  "version": "0.2.0",
  "preview": true,
  "engines": {
    "vscode": "^1.72.0"
  },
  "keywords": [
    "Roblox",
    "Lua",
    "Luau",
    "Sync"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:lua",
    "onLanguage:luau",
    "onCommand:argon.run",
    "onCommand:argon.stop",
    "onCommand:argon.update"
  ],
  "main": "./js/main.js",
  "contributes": {
    "commands": [
      {
        "command": "argon.run",
        "title": "Run Argon",
        "category": "Argon"
      },
      {
        "command": "argon.stop",
        "title": "Stop Argon",
        "category": "Argon"
      },
      {
        "command": "argon.update",
        "title": "Update class database",
        "category": "Argon"
      }
    ],
    "configuration": {
      "title": "Argon",
      "properties": {
        "argon.directories.rootFolder": {
          "type": "string",
          "default": "src",
          "description": "The name of the root folder",
          "pattern": "[^ ]",
          "patternErrorMessage": "This symbol is not allowed"
        },
        "argon.directories.extension": {
          "type": "string",
          "default": ".lua",
          "description": "Default extension of script files when ported from Roblox Studio",
          "enum": [
            ".lua",
            ".luau"
          ]
        },
        "argon.extension.autoRun": {
          "type": "boolean",
          "default": "true",
          "description": "Whether Argon should start automatically"
        },
        "argon.extension.autoUpdate": {
          "type": "boolean",
          "default": "false",
          "description": "Whether Argon should update class database automatically"
        },
        "argon.server.host": {
          "type": "string",
          "default": "localhost",
          "description": "The host that server should be running on",
          "pattern": "[hostname]",
          "patternErrorMessage": "This symbol is not allowed"
        },
        "argon.server.port": {
          "type": "number",
          "default": 8000,
          "description": "The port that server should be running on",
          "minimum": 0,
          "maximum": 65535
        }
      }
    },
    "iconThemes": [
      {
        "id": "argon",
        "label": "Argon",
        "path": "./images/theme.json"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DervexHero/Argon.git"
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.72.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "eslint": "^8.24.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.8.4",
    "@vscode/test-electron": "^2.1.5"
  }
}